{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react",
    "target": "es5",
    "module": "es2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },

  "include": [
    "src/**/*"
  ],
  
  "exclude": [
      "node_modules",
      "dist"
  ]

}
